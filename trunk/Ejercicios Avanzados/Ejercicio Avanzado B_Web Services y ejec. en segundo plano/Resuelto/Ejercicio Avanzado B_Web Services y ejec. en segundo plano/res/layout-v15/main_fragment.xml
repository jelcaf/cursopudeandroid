<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">
    <!-- Obtenci贸n de datos -->
    <TextView
    	android:id="@+id/latitudeTV"
    	android:layout_alignParentTop="true"
    	android:layout_height="wrap_content"
    	android:layout_width="match_parent"
    	android:gravity="center_horizontal"
    	android:text="@string/latitude">
    </TextView>
    <EditText
    	android:id="@+id/latitudeET"
    	android:layout_below="@id/latitudeTV"
    	android:layout_height="wrap_content"
    	android:layout_width="match_parent"
    	android:inputType="number|numberSigned|numberDecimal"
    	android:text="@string/defaultLatitude">
    </EditText>
    <TextView
    	android:id="@+id/longitudeTV"
    	android:layout_below="@id/latitudeET"
    	android:layout_height="wrap_content"
    	android:layout_width="match_parent"
    	android:gravity="center_horizontal"
    	android:text="@string/longitude">
    </TextView>
    <EditText
    	android:id="@+id/longitudeET"
    	android:layout_below="@id/longitudeTV"
    	android:layout_height="wrap_content"
    	android:layout_width="match_parent"
    	android:inputType="number|numberSigned|numberDecimal"
    	android:text="@string/defaultLongitude">
    </EditText>
    <!-- Bot贸n de petici贸n -->
    <Button
    	android:id="@+id/requestButton"
    	android:layout_alignParentBottom="true"
    	android:layout_height="wrap_content"
    	android:layout_width="match_parent"
    	android:text="@string/getAddress">
    </Button>
    <!-- Visualizaci贸n del resultado; tenemos que utilizar un ScrollView porque tras ICS 4.0.3 (API v15)
    	los EditTexts deshabilitados ya no hacen scroll -->
	<TextView
    	android:id="@+id/resultTV"
    	android:layout_below="@id/longitudeET"
    	android:layout_height="wrap_content"
    	android:layout_width="match_parent"
    	android:text="@string/result">
    </TextView>
    <ScrollView
        android:layout_below="@id/resultTV"
    	android:layout_above="@id/requestButton"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
        <EditText
		    android:id="@+id/resultET"
		    android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
		    android:gravity="left|fill_horizontal"
		    android:inputType="textMultiLine"
		    android:enabled="false">
   		</EditText>
    </ScrollView>
	
</RelativeLayout>
